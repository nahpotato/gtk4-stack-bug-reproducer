{
    "app-id" : "org.example.App",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "master",
    "sdk" : "org.gnome.Sdk",
    "command" : "gtk4-stack-bug-reproducer",
    "finish-args" : [
        "--share=network",
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--device=dri"
    ],
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules" : [
    	{
            "name" : "libadwaita",
            "buildsystem" : "meson",
            "config-opts" : [
                "-Dexamples=false",
                "-Dtests=false",
                "-Dintrospection=disabled",
                "-Dvapi=false"
            ],
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://gitlab.gnome.org/exalm/libadwaita.git",
                    "branch" : "main"
                }
            ]
    	},
        {
            "name" : "gtk4-stack-bug-reproducer",
            "builddir" : true,
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "dir",
                    "path" : "."
                }
            ]
        }
    ]
}
